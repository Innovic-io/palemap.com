<script>
  $(document).ready(function () {
    var content = [
      {{#each city.categories}}
        { title: '{{this}}' },
      {{/each}}
    ];

    $('.ui.right.aligned.search.item')
      .search({
        apiSettings: {
          url: '/search?location={{city.location}}&radius={{city.radius}}&type={query}'
        },
        source: content,
        searchFields   : ['title'],
        onSelect: function (result, response) {
          console.log(result);
          console.log(response);
        }
      });
  });
</script>
